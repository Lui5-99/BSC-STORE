            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "UserCreateDto": {
        "required": [
          "password",
          "roleId",
          "username"
        ],
        "type": "object",
        "properties": {
          "username": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "password": {
            "minLength": 8,
            "pattern": "^(?=.*[A-Za-z])(?=.*\\d)(?=.*[^A-Za-z\\d]).{8,}$",
            "type": "string"
          },
          "roleId": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "UserLoginDto": {
        "required": [
